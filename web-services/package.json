{
  "name": "web-services",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prisma:generate": "cd ./packages/db && npx prisma generate && cd ../..",
    "backend": "cd ./apps/backend && bun run index.ts",
    "worker": "cd ./apps/worker && bun run index.ts",
    "ws-relayer": "cd ./apps/ws-relayer && bun run index.ts"
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "prisma": "^6.11.1"
  }
}
